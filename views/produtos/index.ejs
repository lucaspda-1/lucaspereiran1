<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/messages') %>

<main class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Produtos</h1>
    <a href="/produtos/novo" class="btn btn-success">Novo Produto</a>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Preço</th>
        <th>Quantidade</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% produtos.forEach(produto => { %>
        <tr>
          <td><%= produto.id %></td>
          <td><%= produto.nome %></td>
          <td>R$ <%= produto.preco.toFixed(2) %></td>
          <td><%= produto.quantidade %></td>
          <td>
            <a href="/produtos/<%= produto.id %>" class="btn btn-sm btn-info">Ver</a>
            <a href="/produtos/editar/<%= produto.id %>" class="btn btn-sm btn-warning">Editar</a>
            <form action="/produtos/<%= produto.id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>