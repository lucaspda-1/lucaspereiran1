<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/messages') %>

<main class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2><%= produto.nome %></h2>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Descrição:</strong> <%= produto.descricao %></p>
      <p class="card-text"><strong>Preço:</strong> R$ <%= produto.preco.toFixed(2) %></p>
      <p class="card-text"><strong>Quantidade em estoque:</strong> <%= produto.quantidade %></p>
      <p class="card-text"><strong>Categoria:</strong> <%= produto.categoria %></p>
      
      <div class="mt-4">
        <a href="/produtos/editar/<%= produto.id %>" class="btn btn-warning">Editar</a>
        <form action="/produtos/<%= produto.id %>?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
        <a href="/produtos" class="btn btn-secondary">Voltar</a>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>